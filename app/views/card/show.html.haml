.body.clearfix 
  .header
    .header__inner
      .main-header
        %h1.icon 
          = link_to image_tag('logo.png', class: "icon__image"), '#'
        .search-box
          .form
            %input{type: "text",class: "search-box__text", placeholder: "キーワードから探す"}
            %button{type: "submit",class: "submit-btn", value: "Send"}
              .search-button
                = image_tag('search.png', class: "search-button__image")

      .nav
        %ul.list-left 
          %li.list-left__first 
            = link_to "#" do
              カテゴリー
          %li.list-left__last
            = link_to "#" do
              ブランド
        %ul.list-right
          %li.list-right__login
            = link_to "#" do
              ログイン
          %li.list-right__new
            = link_to "#" do
              新規会員登録

  %nav.bread
    %ul
      %li.text
        フリマ >
      %li.text
        マイページ
  %main.container.clearfix 
    .content.card_info
      .card_info__top
        .card_info__top--title
          %h2 登録カード情報
        .card_info__top--body
          .card_info__top--body__left
            .card_info__top--body__left--image
              = image_tag "#{asset_path @card_image}",width:'75',height:'45', alt:'master-card'
            .card_info__top--body__left--number
              = "**** **** **** " + @default_card_information.last4
            .card_info__top--body__left--yearmonth
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
          .card_info__top--body__right
            = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button 削除する
        .card_info__top--about
          %p 支払い方法について
      %p.card_info__back
        = link_to '戻る', 'javascript:history.go(-2)', data: {"turbolinks" => false}
