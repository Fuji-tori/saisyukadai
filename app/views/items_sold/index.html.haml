.body.clearfix 
  .header
    .header__inner
      .main-header
        %h1.icon 
          = link_to image_tag('logo.png', class: "icon__image"), "/"
        .search-box
          .form
            %input{type: "text",class: "search-box__text", placeholder: "キーワードから探す"}
            %button{type: "submit",class: "submit-btn", value: "Send"}
              .search-button
                = image_tag('search.png', class: "search-button__image")

      .nav
        %ul.list-left 
          %li.list-left__first 
            = link_to "#" do
              カテゴリー
          %li.list-left__last
            = link_to "#" do
              ブランド
        %ul.list-right
          %li.list-right__login
            = link_to destroy_user_session_path, method: :delete do
              ログアウト
          %li.list-right__new
            = link_to users_show_path(current_user.id) do
              マイページ

  %nav.bread
    %ul
      %li.text
        フリマ >
      %li.text
        マイページ
  %main.container.clearfix

    .content
      .item-lists-sold
        - @items.each do |item|
          .item-list-sold
            = link_to item_path(item.id) do
              - if (current_user.id == item.user_id && item.dealing == nil)
                %figure.item-list_image-sold
                  = image_tag("/images/#{item.item_images[0][:image]}", class: "item-list_image_image")
                .bodey-sold
                  %h3.name-sold
                    = item.name
                  .data-sold
                    %ul
                      %li
                        = number_to_currency(item.price, unit: "円", format: "%n%u", precision: 0)
                      %li
                        %i.fa.fa-star
                        0
                    %p
                      (税込)

